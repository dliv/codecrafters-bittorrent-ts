{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./app", // where coddecrafters expects main.js
    "rootDir": "./src",
    // "strict": true, // started too late
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
